<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <IsPackable>true</IsPackable>
    <PackageId>VelloSharp.Gauges</PackageId>
    <Title>VelloSharp.Gauges</Title>
    <Description>Industrial gauge primitives, render helpers, and animation profiles for VelloSharp dashboards.</Description>
    <PackageTags>vello;gauges;visualization</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <VelloUseNativePackageDependencies Condition="'$(VelloUseNativePackageDependencies)'==''">false</VelloUseNativePackageDependencies>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\VelloSharp.Composition\VelloSharp.Composition.csproj" />
    <ProjectReference Include="..\..\bindings\VelloSharp\VelloSharp.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\bindings\VelloSharp\NativeLibraryLoader.cs">
      <Link>Internal\NativeLibraryLoader.cs</Link>
    </Compile>
  </ItemGroup>

  <PropertyGroup>
    <RepositoryRoot Condition="'$(RepositoryRoot)'==''">$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\..'))</RepositoryRoot>
  </PropertyGroup>

  <PropertyGroup>
    <_CargoProfileFlag Condition="'$(Configuration)'=='Debug'"></_CargoProfileFlag>
    <_CargoProfileFlag Condition="'$(Configuration)'!='Debug'">--release</_CargoProfileFlag>
    <_CargoProfileDir Condition="'$(Configuration)'=='Debug'">debug</_CargoProfileDir>
    <_CargoProfileDir Condition="'$(Configuration)'!='Debug'">release</_CargoProfileDir>
  </PropertyGroup>

  <Target Name="BuildGaugesNative"
          BeforeTargets="Build"
          Condition="'$(DesignTimeBuild)'!='true' and '$(VelloSkipNativeBuild)'!='true' and '$(VelloUseNativePackageDependencies)'!='true'">
    <Exec Command="cargo build -p vello_gauges_core $(_CargoProfileFlag)"
          WorkingDirectory="$(RepositoryRoot)" />
  </Target>

  <Target Name="CopyGaugesNative"
          AfterTargets="Build"
          Condition="'$(DesignTimeBuild)'!='true' and '$(VelloSkipNativeBuild)'!='true' and '$(VelloUseNativePackageDependencies)'!='true'">
    <ItemGroup>
      <_GaugesNative Include="$(RepositoryRoot)\target\$(_CargoProfileDir)\vello_gauges_core.dll"
                     Condition="Exists('$(RepositoryRoot)\target\$(_CargoProfileDir)\vello_gauges_core.dll')" />
      <_GaugesNative Include="$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_gauges_core.so"
                     Condition="Exists('$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_gauges_core.so')" />
      <_GaugesNative Include="$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_gauges_core.dylib"
                     Condition="Exists('$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_gauges_core.dylib')" />
    </ItemGroup>

    <Copy SourceFiles="@(_GaugesNative)"
          DestinationFolder="$(OutDir)"
          SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(_GaugesNative)"
          DestinationFolder="$(OutDir)runtimes\$(RuntimeIdentifier)\native"
          Condition="'$(RuntimeIdentifier)'!=''"
          SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(_GaugesNative)"
          DestinationFolder="$(OutDir)runtimes\win-x64\native"
          Condition="'$(RuntimeIdentifier)'=='' and Exists('$(OutDir)')"
          SkipUnchangedFiles="true" />
  </Target>

  <ItemGroup Condition="'$(VelloUseNativePackageDependencies)'=='true'">
    <PackageReference Include="VelloSharp.Native.Gauges"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Gauges.$(VelloNativePackageVersion).nupkg')" />
  </ItemGroup>

</Project>
