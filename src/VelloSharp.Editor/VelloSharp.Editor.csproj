<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <IsPackable>true</IsPackable>
    <PackageId>VelloSharp.Editor</PackageId>
    <Title>VelloSharp.Editor</Title>
    <Description>Managed bindings for the VelloSharp visual editor, including composition tooling and runtime bridges.</Description>
    <PackageTags>vello;editor;composition</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <VelloUseNativePackageDependencies Condition="'$(VelloUseNativePackageDependencies)'==''">false</VelloUseNativePackageDependencies>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\VelloSharp.Composition\VelloSharp.Composition.csproj" />
    <ProjectReference Include="..\..\bindings\VelloSharp\VelloSharp.csproj" />
    <ProjectReference Include="..\VelloSharp.Gauges\VelloSharp.Gauges.csproj" />
    <ProjectReference Include="..\VelloSharp.TreeDataGrid\VelloSharp.TreeDataGrid.csproj" />
    <ProjectReference Include="..\VelloSharp.ChartEngine\VelloSharp.ChartEngine.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <RepositoryRoot Condition="'$(RepositoryRoot)'==''">$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\..'))</RepositoryRoot>
  </PropertyGroup>

  <ItemGroup Condition="'$(VelloUseNativePackageDependencies)'=='true'">
    <PackageReference Include="VelloSharp.Native.Editor.android-arm64"
                      Condition="Exists('$(RepositoryRoot)/artifacts/runtimes/android-arm64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.android-arm64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.browser-wasm"
                      Condition="Exists('$(RepositoryRoot)/artifacts/runtimes/browser-wasm/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.browser-wasm.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.ios-arm64"
                      Condition="Exists('$(RepositoryRoot)/artifacts/runtimes/ios-arm64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.ios-arm64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.iossimulator-x64"
                      Condition="Exists('$(RepositoryRoot)/artifacts/runtimes/iossimulator-x64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.iossimulator-x64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.linux-arm64"
                      Condition="Exists('$(RepositoryRoot)/artifacts/runtimes/linux-arm64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.linux-arm64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.linux-x64"
                      Condition="Exists('$(RepositoryRoot)/artifacts/runtimes/linux-x64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.linux-x64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.osx-arm64"
                      Condition="Exists('$(RepositoryRoot)/artifacts/runtimes/osx-arm64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.osx-arm64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.osx-x64"
                      Condition="Exists('$(RepositoryRoot)/artifacts/runtimes/osx-x64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.osx-x64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.win-arm64"
                      Condition="Exists('$(RepositoryRoot)/artifacts/runtimes/win-arm64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.win-arm64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.win-x64"
                      Condition="Exists('$(RepositoryRoot)/artifacts/runtimes/win-x64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.win-x64.$(VelloNativePackageVersion).nupkg')" />
  </ItemGroup>

</Project>
