<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <IsPackable>true</IsPackable>
    <PackageId>VelloSharp.Editor</PackageId>
    <Title>VelloSharp.Editor</Title>
    <Description>Managed bindings for the VelloSharp visual editor, including composition tooling and runtime bridges.</Description>
    <PackageTags>vello;editor;composition</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <VelloUseNativePackageDependencies Condition="'$(VelloUseNativePackageDependencies)'==''">false</VelloUseNativePackageDependencies>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\VelloSharp.Composition\VelloSharp.Composition.csproj" />
    <ProjectReference Include="..\..\bindings\VelloSharp\VelloSharp.csproj" />
    <ProjectReference Include="..\VelloSharp.Gauges\VelloSharp.Gauges.csproj" />
    <ProjectReference Include="..\VelloSharp.TreeDataGrid\VelloSharp.TreeDataGrid.csproj" />
    <ProjectReference Include="..\VelloSharp.ChartEngine\VelloSharp.ChartEngine.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <RepositoryRoot Condition="'$(RepositoryRoot)'==''">$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\..'))</RepositoryRoot>
  </PropertyGroup>

  <PropertyGroup>
    <_CargoProfileFlag Condition="'$(Configuration)'=='Debug'"></_CargoProfileFlag>
    <_CargoProfileFlag Condition="'$(Configuration)'!='Debug'">--release</_CargoProfileFlag>
    <_CargoProfileDir Condition="'$(Configuration)'=='Debug'">debug</_CargoProfileDir>
    <_CargoProfileDir Condition="'$(Configuration)'!='Debug'">release</_CargoProfileDir>
  </PropertyGroup>

  <Target Name="BuildEditorNative"
          BeforeTargets="Build"
          Condition="'$(DesignTimeBuild)'!='true' and '$(VelloSkipNativeBuild)'!='true' and '$(VelloUseNativePackageDependencies)'!='true'">
    <Exec Command="cargo build -p vello_editor_core $(_CargoProfileFlag)"
          WorkingDirectory="$(RepositoryRoot)" />
  </Target>

  <Target Name="CopyEditorNative"
          AfterTargets="Build"
          Condition="'$(DesignTimeBuild)'!='true' and '$(VelloSkipNativeBuild)'!='true' and '$(VelloUseNativePackageDependencies)'!='true'">
    <ItemGroup>
      <_EditorNative Include="$(RepositoryRoot)\target\$(_CargoProfileDir)\vello_editor_core.dll"
                     Condition="Exists('$(RepositoryRoot)\target\$(_CargoProfileDir)\vello_editor_core.dll')" />
      <_EditorNative Include="$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_editor_core.so"
                     Condition="Exists('$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_editor_core.so')" />
      <_EditorNative Include="$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_editor_core.dylib"
                     Condition="Exists('$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_editor_core.dylib')" />
    </ItemGroup>

    <Copy SourceFiles="@(_EditorNative)"
          DestinationFolder="$(OutDir)"
          SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(_EditorNative)"
          DestinationFolder="$(OutDir)runtimes\$(RuntimeIdentifier)\native"
          Condition="'$(RuntimeIdentifier)'!=''"
          SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(_EditorNative)"
          DestinationFolder="$(OutDir)runtimes\win-x64\native"
          Condition="'$(RuntimeIdentifier)'=='' and Exists('$(OutDir)')"
          SkipUnchangedFiles="true" />
  </Target>

  <ItemGroup Condition="'$(VelloUseNativePackageDependencies)'=='true'">
    <PackageReference Include="VelloSharp.Native.Editor.android-arm64"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/runtimes/android-arm64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.android-arm64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.browser-wasm"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/runtimes/browser-wasm/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.browser-wasm.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.ios-arm64"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/runtimes/ios-arm64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.ios-arm64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.iossimulator-x64"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/runtimes/iossimulator-x64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.iossimulator-x64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.linux-arm64"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/runtimes/linux-arm64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.linux-arm64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.linux-x64"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/runtimes/linux-x64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.linux-x64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.osx-arm64"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/runtimes/osx-arm64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.osx-arm64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.osx-x64"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/runtimes/osx-x64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.osx-x64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.win-arm64"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/runtimes/win-arm64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.win-arm64.$(VelloNativePackageVersion).nupkg')" />
    <PackageReference Include="VelloSharp.Native.Editor.win-x64"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/runtimes/win-x64/native') Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Editor.win-x64.$(VelloNativePackageVersion).nupkg')" />
  </ItemGroup>

</Project>
