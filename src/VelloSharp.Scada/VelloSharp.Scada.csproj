<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <IsPackable>true</IsPackable>
    <PackageId>VelloSharp.Scada</PackageId>
    <Title>VelloSharp.Scada</Title>
    <Description>SCADA-view composition, alarms, and dashboard orchestration built on the VelloSharp runtime.</Description>
    <PackageTags>vello;scada;visualization</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <VelloUseNativePackageDependencies Condition="'$(VelloUseNativePackageDependencies)'==''">false</VelloUseNativePackageDependencies>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\VelloSharp.Composition\VelloSharp.Composition.csproj" />
    <ProjectReference Include="..\..\bindings\VelloSharp\VelloSharp.csproj" />
    <ProjectReference Include="..\VelloSharp.Gauges\VelloSharp.Gauges.csproj" />
    <ProjectReference Include="..\VelloSharp.TreeDataGrid\VelloSharp.TreeDataGrid.csproj" />
    <ProjectReference Include="..\VelloSharp.ChartEngine\VelloSharp.ChartEngine.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\bindings\VelloSharp\NativeLibraryLoader.cs">
      <Link>Internal\NativeLibraryLoader.cs</Link>
    </Compile>
  </ItemGroup>

  <PropertyGroup>
    <RepositoryRoot Condition="'$(RepositoryRoot)'==''">$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\..'))</RepositoryRoot>
  </PropertyGroup>

  <PropertyGroup>
    <_CargoProfileFlag Condition="'$(Configuration)'=='Debug'"></_CargoProfileFlag>
    <_CargoProfileFlag Condition="'$(Configuration)'!='Debug'">--release</_CargoProfileFlag>
    <_CargoProfileDir Condition="'$(Configuration)'=='Debug'">debug</_CargoProfileDir>
    <_CargoProfileDir Condition="'$(Configuration)'!='Debug'">release</_CargoProfileDir>
  </PropertyGroup>

  <Target Name="BuildScadaNative"
          BeforeTargets="Build"
          Condition="'$(DesignTimeBuild)'!='true' and '$(VelloSkipNativeBuild)'!='true' and '$(VelloUseNativePackageDependencies)'!='true'">
    <Exec Command="cargo build -p vello_scada_runtime $(_CargoProfileFlag)"
          WorkingDirectory="$(RepositoryRoot)" />
  </Target>

  <Target Name="CopyScadaNative"
          AfterTargets="Build"
          Condition="'$(DesignTimeBuild)'!='true' and '$(VelloSkipNativeBuild)'!='true' and '$(VelloUseNativePackageDependencies)'!='true'">
    <ItemGroup>
      <_ScadaNative Include="$(RepositoryRoot)\target\$(_CargoProfileDir)\vello_scada_runtime.dll"
                    Condition="Exists('$(RepositoryRoot)\target\$(_CargoProfileDir)\vello_scada_runtime.dll')" />
      <_ScadaNative Include="$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_scada_runtime.so"
                    Condition="Exists('$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_scada_runtime.so')" />
      <_ScadaNative Include="$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_scada_runtime.dylib"
                    Condition="Exists('$(RepositoryRoot)\target\$(_CargoProfileDir)\libvello_scada_runtime.dylib')" />
    </ItemGroup>

    <Copy SourceFiles="@(_ScadaNative)"
          DestinationFolder="$(OutDir)"
          SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(_ScadaNative)"
          DestinationFolder="$(OutDir)runtimes\$(RuntimeIdentifier)\native"
          Condition="'$(RuntimeIdentifier)'!=''"
          SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(_ScadaNative)"
          DestinationFolder="$(OutDir)runtimes\win-x64\native"
          Condition="'$(RuntimeIdentifier)'=='' and Exists('$(OutDir)')"
          SkipUnchangedFiles="true" />
  </Target>

  <ItemGroup Condition="'$(VelloUseNativePackageDependencies)'=='true'">
    <PackageReference Include="VelloSharp.Native.Scada"
                      Condition="'$(VelloNativePackagesAvailable)'=='true' Or Exists('$(RepositoryRoot)/artifacts/nuget/VelloSharp.Native.Scada.$(VelloNativePackageVersion).nupkg')" />
  </ItemGroup>

</Project>
