<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <IsPackable>true</IsPackable>
    <PackageId>VelloSharp.Scada</PackageId>
    <Title>VelloSharp.Scada</Title>
    <Description>SCADA-view composition, alarms, and dashboard orchestration built on the VelloSharp runtime.</Description>
    <PackageTags>vello;scada;visualization</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <VelloUseNativePackageDependencies Condition="'$(VelloUseNativePackageDependencies)'==''">false</VelloUseNativePackageDependencies>
    <VelloNativePackageIds Condition="'$(VelloNativePackageIds)'==''">VelloSharp.Native.Scada</VelloNativePackageIds>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\VelloSharp.Composition\VelloSharp.Composition.csproj" />
    <ProjectReference Include="..\..\bindings\VelloSharp\VelloSharp.csproj" />
    <ProjectReference Include="..\VelloSharp.Gauges\VelloSharp.Gauges.csproj" />
    <ProjectReference Include="..\VelloSharp.TreeDataGrid\VelloSharp.TreeDataGrid.csproj" />
    <ProjectReference Include="..\VelloSharp.ChartEngine\VelloSharp.ChartEngine.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(VelloUseNativePackageDependencies)'=='true'">
    <PackageReference Include="VelloSharp.Native.Scada" />
  </ItemGroup>
</Project>
