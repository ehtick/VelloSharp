  <ItemGroup>
    <ProjectReference Include="..\VelloSharp.Charting\VelloSharp.Charting.csproj" />
    <ProjectReference Include="..\VelloSharp.ChartEngine\VelloSharp.ChartEngine.csproj" />
    <ProjectReference Include="..\VelloSharp.ChartRuntime\VelloSharp.ChartRuntime.csproj" />
