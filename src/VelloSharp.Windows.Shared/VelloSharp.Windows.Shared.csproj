<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.17763</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AssemblyName>VelloSharp.Windows.Shared</AssemblyName>
    <RootNamespace>VelloSharp.Windows</RootNamespace>
    <IsPackable>true</IsPackable>
    <PackageId>VelloSharp.Windows.Shared</PackageId>
    <Title>VelloSharp.Windows.Shared</Title>
    <Description>Shared Windows XAML rendering helpers for VelloSharp (WinUI, UWP, Uno, MAUI).</Description>
    <UseWinUI>true</UseWinUI>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <WindowsAppSDKPlatforms>win10-x64</WindowsAppSDKPlatforms>
    <EnableMsixTooling>false</EnableMsixTooling>
    <AppxGeneratePriEnabled>false</AppxGeneratePriEnabled>
    <EnableCoreMrtTooling>false</EnableCoreMrtTooling>
    <WindowsPackageType>None</WindowsPackageType>
    <WindowsAppSdkBootstrapInitialize>false</WindowsAppSdkBootstrapInitialize>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\bindings\VelloSharp\VelloSharp.csproj" />
    <ProjectReference Include="..\..\bindings\VelloSharp.Windows.Core\VelloSharp.Windows.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.WindowsAppSDK" />
  </ItemGroup>
</Project>
