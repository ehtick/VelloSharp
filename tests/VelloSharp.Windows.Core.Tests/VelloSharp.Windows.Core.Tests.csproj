<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <IsWindowsHost>$([MSBuild]::IsOSPlatform('Windows'))</IsWindowsHost>
    <IsTestProject>true</IsTestProject>
  </PropertyGroup>

  <PropertyGroup Condition="'$(IsWindowsHost)' == 'true'">
    <TargetFramework>net8.0-windows10.0.19041</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <RuntimeIdentifiers>win-x64</RuntimeIdentifiers>
    <IsPackable>false</IsPackable>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <DisableRuntimeIdentifierValidation>true</DisableRuntimeIdentifierValidation>
    <WindowsAppSDKPlatforms>win10-x64</WindowsAppSDKPlatforms>
    <MauiTargetFrameworks>net8.0-windows10.0.19041</MauiTargetFrameworks>
    <DisableWorkloadResolveCheck>true</DisableWorkloadResolveCheck>
    <MSBuildEnableWorkloadResolver>false</MSBuildEnableWorkloadResolver>
    <EnableMsixTooling>false</EnableMsixTooling>
    <AppxGeneratePriEnabled>false</AppxGeneratePriEnabled>
    <EnableCoreMrtTooling>false</EnableCoreMrtTooling>
  </PropertyGroup>

  <PropertyGroup Condition="'$(IsWindowsHost)' != 'true'">
    <TargetFramework>net8.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <EnableWindowsTargeting>false</EnableWindowsTargeting>
    <SkipNonWindowsBuild>true</SkipNonWindowsBuild>
  </PropertyGroup>

  <ItemGroup Condition="'$(IsWindowsHost)' == 'true'">
    <ProjectReference Include="../../bindings/VelloSharp.Windows.Core/VelloSharp.Windows.Core.csproj" />
    <ProjectReference Include="../../bindings/VelloSharp.Integration.Wpf/VelloSharp.Integration.Wpf.csproj" />
    <ProjectReference Include="../../bindings/VelloSharp/VelloSharp.csproj" />
    <ProjectReference Include="../../bindings/VelloSharp.Uno/VelloSharp.Uno.csproj" AdditionalProperties="TargetFramework=net8.0-windows10.0.19041" />
    <ProjectReference Include="../../src/VelloSharp.Windows.Shared/VelloSharp.Windows.Shared.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(IsWindowsHost)' == 'true' and '$(EnableMauiTests)' == 'true'">
    <ProjectReference Include="../../src/VelloSharp.Maui.Core/VelloSharp.Maui.Core.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(IsWindowsHost)' == 'true' and '$(EnableMauiTests)' != 'true'">
    <Compile Remove="MauiCompositionInputSourceTests.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(IsWindowsHost)' != 'true'">
    <Compile Remove="**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="xunit" />
    <PackageReference Include="xunit.runner.visualstudio">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Xunit.StaFact" />
  </ItemGroup>

  <Target Name="_SkipWindowsOnlyTestsOnNonWindows"
          Condition="'$(SkipNonWindowsBuild)' == 'true'"
          BeforeTargets="Build">
    <Message Text="Skipping Windows-only tests in $(MSBuildProjectName) on non-Windows host." Importance="high" />
  </Target>
</Project>

