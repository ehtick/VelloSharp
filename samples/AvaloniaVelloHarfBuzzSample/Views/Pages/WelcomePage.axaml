<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:rendering="clr-namespace:AvaloniaVelloHarfBuzzSample.Rendering"
             x:Class="AvaloniaVelloHarfBuzzSample.Views.Pages.WelcomePage">
  <ScrollViewer>
    <StackPanel Margin="24"
                Spacing="18">
      <TextBlock Text="Welcome to the HarfBuzz Gallery"
                 FontSize="28"
                 FontWeight="SemiBold" />
      <TextBlock Text="{Binding Introduction}"
                 FontSize="14"
                 TextWrapping="Wrap"
                 Opacity="0.85" />
      <rendering:HarfBuzzLeaseSurface Height="240"
                                      Margin="0,16,0,0"
                                      Renderer="{Binding Renderer}"
                                      Services="{Binding Services}"
                                      ShowAxes="True" />
    </StackPanel>
  </ScrollViewer>
</UserControl>
