<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:AvaloniaVelloPlayground.Controls"
        x:Class="AvaloniaVelloPlayground.Views.MainWindow"
        mc:Ignorable="d"
        Title="VelloSharp Playground"
        Width="1400"
        Height="880"
        MinWidth="1024"
        MinHeight="720">
  <Grid ColumnDefinitions="1.1*,0.9*">
    <Grid Margin="16"
          Grid.Column="0"
          RowDefinitions="Auto,Auto,Auto,*,Auto">
      <ComboBox Grid.Row="0"
                ItemsSource="{Binding Examples}"
                SelectedItem="{Binding SelectedExample}"
                HorizontalAlignment="Stretch"
                MaxDropDownHeight="400"
                Margin="0,0,0,8">
        <ComboBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding Name}" />
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>

      <TextBlock Grid.Row="1"
                 Text="{Binding SelectedExample.Description}"
                 Foreground="{DynamicResource ThemeForegroundLowBrush}"
                 Margin="0,0,0,8"
                 TextWrapping="Wrap" />

      <StackPanel Grid.Row="2"
                  Orientation="Horizontal"
                  Spacing="8"
                  Margin="0,0,0,8">
        <Button Content="Run Script"
                Command="{Binding RunCommand}" />
        <Button Content="Reset Example"
                Command="{Binding ResetToExampleCommand}" />
        <TextBlock Text="{Binding StatusMessage}"
                   VerticalAlignment="Center"
                   Margin="12,0,0,0" />
      </StackPanel>

      <Border Grid.Row="3"
              BorderThickness="1"
              CornerRadius="8"
              BorderBrush="{DynamicResource ThemeBorderLowBrush}"
              Background="{DynamicResource ThemeBackgroundLowBrush}"
              Padding="0"
              Margin="0,0,0,8">
        <TextBox Text="{Binding ScriptText}"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas, Courier New, monospace"
                 FontSize="14"
                 TextWrapping="NoWrap" />
      </Border>

      <Border Grid.Row="4"
              Margin="0,8,0,0"
              BorderThickness="1"
              CornerRadius="8"
              BorderBrush="{DynamicResource ThemeBorderLowBrush}"
              Background="{DynamicResource ThemeBackgroundLowBrush}"
              Padding="12">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <TextBlock Text="{Binding Diagnostics}"
                     FontFamily="Consolas, Courier New, monospace"
                     FontSize="12"
                     Foreground="{DynamicResource ThemeForegroundLowBrush}"
                     TextWrapping="Wrap" />
        </ScrollViewer>
      </Border>
    </Grid>

    <Border Grid.Column="1"
            Margin="16"
            BorderThickness="1"
            CornerRadius="10"
            BorderBrush="{DynamicResource ThemeBorderMidBrush}"
            Background="{DynamicResource ThemeBackgroundBrush}">
      <controls:ScriptedLeaseView Execution="{Binding ActiveExecution}" />
    </Border>
  </Grid>
</Window>
