<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:rendering="clr-namespace:AvaloniaVelloSkiaSharpSample.Rendering"
             x:Class="AvaloniaVelloSkiaSharpSample.Views.Pages.WelcomePage">
  <Grid Margin="24"
        RowDefinitions="Auto,*"
        RowSpacing="16">
    <StackPanel Spacing="4">
      <TextBlock Text="Welcome"
                 FontSize="20"
                 FontWeight="SemiBold" />
      <TextBlock Text="This page verifies the lease infrastructure and SkiaSharp shim pipeline. Resize the window to watch the Vello scene rebuild in real time."
                 Opacity="0.78"
                 TextWrapping="Wrap" />
    </StackPanel>

    <Border Grid.Row="1"
            Background="#111722"
            CornerRadius="12"
            Padding="16">
      <rendering:SkiaLeaseSurface Renderer="{Binding}" />
    </Border>
  </Grid>
</UserControl>
