<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:rendering="clr-namespace:AvaloniaVelloSkiaSharpSample.Rendering"
             x:Class="AvaloniaVelloSkiaSharpSample.Views.Pages.ImageWorkshopPage">
  <Grid Margin="24"
        RowDefinitions="Auto,*"
        ColumnDefinitions="360,*"
        RowSpacing="16"
        ColumnSpacing="16">
    <StackPanel Grid.ColumnSpan="2"
                Spacing="4">
      <TextBlock Text="Image Workshop"
                 FontSize="20"
                 FontWeight="SemiBold" />
      <TextBlock Text="Blend procedural image sources, adjust zoom, and inspect histogram breakdown."
                 Opacity="0.78"
                 TextWrapping="Wrap" />
    </StackPanel>

    <ScrollViewer Grid.Row="1"
                  HorizontalScrollBarVisibility="Disabled">
      <StackPanel Spacing="16">
        <Border Background="#111722"
                CornerRadius="8"
                Padding="12">
          <StackPanel Spacing="12">
            <TextBlock Text="Source"
                       FontWeight="SemiBold" />
            <ComboBox ItemsSource="{Binding Sources}"
                      SelectedItem="{Binding SelectedSource}">
              <ComboBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding Name}" />
                </DataTemplate>
              </ComboBox.ItemTemplate>
            </ComboBox>

            <StackPanel Spacing="8">
              <TextBlock Text="Zoom"
                         Opacity="0.72"
                         FontWeight="SemiBold" />
              <StackPanel Orientation="Horizontal"
                          Spacing="8"
                          VerticalAlignment="Center">
                <Slider Width="220"
                        Minimum="0.2"
                        Maximum="3"
                        Value="{Binding Zoom}"
                        TickFrequency="0.1" />
                <TextBlock Text="{Binding Zoom, StringFormat='{}{0:F2}Ã—'}"
                           Width="60" />
              </StackPanel>
            </StackPanel>

            <CheckBox Content="Animate seed"
                      IsChecked="{Binding Animate}"
                      IsEnabled="{Binding CanAnimate}" />
            <CheckBox Content="Show histogram"
                      IsChecked="{Binding ShowHistogram}" />

            <StackPanel Spacing="6"
                        IsVisible="{Binding IsAssetSource}">
              <TextBlock Text="Processing"
                         FontWeight="SemiBold"
                         Opacity="0.72" />
              <ComboBox ItemsSource="{Binding ProcessingModes}"
                        SelectedItem="{Binding SelectedProcessing}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </StackPanel>

            <Button Content="Capture snapshot"
                    Command="{Binding CaptureSnapshotCommand}" />
            <TextBlock Text="{Binding CaptureStatus}"
                       FontSize="11"
                       Opacity="0.75"
                       TextWrapping="Wrap" />

            <Button Content="Export PNG"
                    Command="{Binding ExportImageCommand}" />
            <TextBlock Text="{Binding ExportStatus}"
                       FontSize="11"
                       Opacity="0.75"
                       TextWrapping="Wrap" />
          </StackPanel>
        </Border>

        <Border Background="#111722"
                CornerRadius="8"
                Padding="12">
          <StackPanel Spacing="6">
            <TextBlock Text="Image Summary"
                       FontWeight="SemiBold" />
            <TextBlock Text="{Binding ImageSummary}"
                       FontFamily="Consolas, Courier New"
                       FontSize="12"
                       TextWrapping="Wrap" />
            <Separator />
            <TextBlock Text="Codec"
                       FontWeight="SemiBold" />
            <TextBlock Text="{Binding CodecSummary}"
                       FontFamily="Consolas, Courier New"
                       FontSize="12"
                       TextWrapping="Wrap" />
            <TextBlock Text="Data"
                       FontWeight="SemiBold"
                       Margin="0,8,0,0" />
            <TextBlock Text="{Binding DataSummary}"
                       FontFamily="Consolas, Courier New"
                       FontSize="12"
                       TextWrapping="Wrap" />
            <TextBlock Text="Processing"
                       FontWeight="SemiBold"
                       Margin="0,8,0,0" />
            <TextBlock Text="{Binding ProcessingSummary}"
                       FontFamily="Consolas, Courier New"
                       FontSize="12"
                       TextWrapping="Wrap" />
          </StackPanel>
        </Border>
      </StackPanel>
    </ScrollViewer>

    <Border Grid.Row="1"
            Grid.Column="1"
            Background="#101722"
            CornerRadius="12"
            Padding="16">
      <rendering:SkiaLeaseSurface Renderer="{Binding}"
                                   BackendDescriptor="{Binding BackendDescriptor}" />
    </Border>
  </Grid>
</UserControl>
