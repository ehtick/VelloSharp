<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:svg="clr-namespace:VelloSharp.Avalonia.Svg;assembly=VelloSharp.Avalonia.Svg"
             x:Class="AvaloniaVelloCommon.Views.SvgDemoPage"
             mc:Ignorable="d">
  <Grid RowDefinitions="Auto,Auto,*">
    <StackPanel Grid.Row="0"
                Orientation="Horizontal"
                Spacing="8">
      <TextBlock Text="Asset:" VerticalAlignment="Center"/>
      <ComboBox x:Name="AssetCombo"
                Width="220"
                SelectionChanged="OnAssetSelectionChanged">
        <ComboBoxItem Content="Dashed Lines"
                      Tag="avares://AvaloniaVelloCommon/Assets/Svg/LeaseDemoSample.svg" />
        <ComboBoxItem Content="Ghostscript Tiger"
                      Tag="avares://AvaloniaVelloCommon/Assets/Svg/Tiger.svg" />
      </ComboBox>
    </StackPanel>

    <Grid Grid.Row="1"
          Margin="0,8,0,12"
          ColumnDefinitions="*,Auto">
      <StackPanel>
        <TextBlock Text="Source:"/>
        <TextBlock x:Name="SourceText"
                   Margin="0,2,0,8"
                   FontWeight="SemiBold"/>
        <TextBlock x:Name="BackendStatusText"/>
      </StackPanel>
      <Button Grid.Column="1"
              Padding="12,6"
              Margin="12,0,0,0"
              Click="OnReloadClick"
              Content="Reload"/>
    </Grid>

    <Border Grid.Row="2"
            BorderBrush="{DynamicResource ThemeBorderLowBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="12">
      <svg:Svg x:Name="DemoSvg"
               Stretch="Uniform"
               StretchDirection="Both" />
    </Border>
  </Grid>
</UserControl>
