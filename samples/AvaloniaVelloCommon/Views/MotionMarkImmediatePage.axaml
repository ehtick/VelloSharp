<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:AvaloniaVelloCommon.Controls"
             x:Class="AvaloniaVelloCommon.Views.MotionMarkImmediatePage">
  <Grid RowDefinitions="Auto,Auto,*"
        RowSpacing="16">
    <StackPanel Spacing="4">
      <TextBlock Text="MotionMark via drawing context"
                 FontSize="18"
                 FontWeight="SemiBold" />
      <TextBlock TextWrapping="Wrap"
                 Opacity="0.8"
                 Text="Runs the same MotionMark scene but records geometries through Avalonia's ImmediateDrawingContext without touching the Vello lease APIs." />
    </StackPanel>

    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Spacing="8"
                VerticalAlignment="Center">
      <Button Content="-"
              Click="OnDecreaseComplexity" />
      <Slider x:Name="ComplexitySlider"
              Width="220"
              Minimum="1"
              Maximum="64"
              TickFrequency="1"
              IsSnapToTickEnabled="True"
              Value="{Binding Complexity, Mode=TwoWay, ElementName=DrawingContextControl}" />
      <Button Content="+"
              Click="OnIncreaseComplexity" />
      <Button Content="Reset"
              Click="OnResetComplexity" />
      <Separator Margin="8,0" />
      <ToggleSwitch Content="Animate"
                    IsChecked="{Binding IsAnimationEnabled, Mode=TwoWay, ElementName=DrawingContextControl}" />
      <Separator Margin="8,0" />
      <TextBlock Text="{Binding Complexity, ElementName=DrawingContextControl}"
                 VerticalAlignment="Center"
                 FontFamily="Inter"
                 FontWeight="Medium" />
    </StackPanel>

    <Border Grid.Row="2"
            Background="#1B2330"
            CornerRadius="8"
            Padding="16">
      <controls:MotionMarkDrawingContextControl x:Name="DrawingContextControl"
                                                MinHeight="360" />
    </Border>
  </Grid>
</UserControl>
