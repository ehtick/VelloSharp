<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:AvaloniaVelloCommon.Controls"
             x:Class="AvaloniaVelloCommon.Views.CubeDemoPage">
  <Grid RowDefinitions="Auto,*"
        RowSpacing="16">
    <StackPanel Spacing="4">
      <TextBlock Text="wgpu cube lease demo"
                 FontSize="18"
                 FontWeight="SemiBold" />
      <TextBlock TextWrapping="Wrap"
                 Opacity="0.8"
                 Text="This sample schedules the canonical wgpu cube rendering via IVelloApiLeaseFeature.ScheduleWgpuSurfaceRender, reusing the upstream cube WGSL while Avalonia/Vello handle the rest of the scene." />
    </StackPanel>

    <Border Grid.Row="1"
            Background="#193149"
            CornerRadius="8"
            Padding="16">
      <controls:CubeDemoControl MinHeight="320" />
    </Border>
  </Grid>
</UserControl>
