<Window
    x:Class="VelloSharp.Uno.WinAppSdkSample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:VelloSharp.Uno.Controls"
    xmlns:local="using:VelloSharp.Uno.WinAppSdkSample">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Spacing="8">
            <TextBlock Text="VelloSharp Uno WinAppSDK swapchain sample"
                       FontSize="20"
                       FontWeight="SemiBold" />
            <TextBlock Text="This sample wires the multi-targeted VelloSharp.Uno assembly into a WinAppSDK/WinUI 3 head and instantiates the SwapChainPanel bridge ahead of Phase 3 rendering hooks."
                       TextWrapping="WrapWholeWords" />
        </StackPanel>
        <Grid Grid.Row="1">
            <controls:VelloSwapChainPanel x:Name="SwapChainHost" />
            <Border Background="#AA202020"
                    CornerRadius="4"
                    Margin="12"
                    Padding="8"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                <TextBlock Text="SwapChainPanel initialised. GPU rendering will light up once Phase 3 wiring is complete."
                           Foreground="White"
                           TextWrapping="WrapWholeWords" />
            </Border>
        </Grid>
    </Grid>
</Window>
