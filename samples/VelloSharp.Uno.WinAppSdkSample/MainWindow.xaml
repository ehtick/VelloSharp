<Window
    x:Class="VelloSharp.Uno.WinAppSdkSample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VelloSharp.Uno.WinAppSdkSample">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Spacing="8">
            <TextBlock Text="VelloSharp Uno WinAppSDK swapchain sample"
                       FontSize="20"
                       FontWeight="SemiBold" />
            <TextBlock Text="This sample wires the multi-targeted VelloSharp.Uno assembly into a WinAppSDK/WinUI 3 head and instantiates the SwapChainPanel bridge ahead of Phase 3 rendering hooks."
                       TextWrapping="WrapWholeWords" />
        </StackPanel>
        <Border Grid.Row="1"
                BorderBrush="#1E2838"
                BorderThickness="1">
            <local:ChartView x:Name="ChartHost" />
        </Border>
    </Grid>
</Window>




