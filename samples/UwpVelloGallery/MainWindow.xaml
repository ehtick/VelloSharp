<Window
    x:Class="UwpVelloGallery.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:UwpVelloGallery"
    xmlns:vello="using:VelloSharp.Uwp.Controls"
    mc:Ignorable="d"
    Title="VelloSharp UWP Gallery (Preview)">

    <Grid>
        <vello:VelloSwapChainPanel x:Name="SwapChain"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    PreferredBackend="Gpu"
                                    RenderMode="Continuous"
                                    Margin="0" />

        <Border Background="#66000000"
                Padding="12"
                CornerRadius="8"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="16">
            <TextBlock x:Name="DiagnosticsLabel"
                       Text="Ready"
                       Foreground="White"
                       FontSize="14"
                       FontFamily="Consolas"
                       TextWrapping="Wrap" />
        </Border>
    </Grid>
</Window>
