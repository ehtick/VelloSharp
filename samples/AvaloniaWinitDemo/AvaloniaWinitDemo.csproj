<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AvaloniaUseCompiledBindings>true</AvaloniaUseCompiledBindings>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <VelloRepositoryRoot Condition="'$(VelloRepositoryRoot)'==''">$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\\..\\'))</VelloRepositoryRoot>
  </PropertyGroup>

  <PropertyGroup>
    <CFBundleName>AvaloniaWinitDemo</CFBundleName>
    <CFBundleIdentifier>org.vellosharp.samples.avaloniawinitdemo</CFBundleIdentifier>
    <CFBundleShortVersionString>1.0.0</CFBundleShortVersionString>
    <NSHighResolutionCapable>true</NSHighResolutionCapable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" />
    <PackageReference Include="Avalonia.Themes.Fluent" />
    <PackageReference Include="Avalonia.ReactiveUI" />
    <PackageReference Include="Avalonia.Fonts.Inter" />
    <PackageReference Include="Dotnet.Bundle" />
    <PackageReference Include="Avalonia.Diagnostics" Condition="'$(Configuration)' == 'Debug'" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../VelloSharp/VelloSharp.csproj" />
    <ProjectReference Include="../../VelloSharp.Avalonia.Winit/VelloSharp.Avalonia.Winit.csproj" />
    <ProjectReference Include="../../VelloSharp.Avalonia.Vello/VelloSharp.Avalonia.Vello.csproj" />
    <ProjectReference Include="../../VelloSharp.Integration/VelloSharp.Integration.csproj" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.osx-arm64/VelloSharp.Native.osx-arm64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/osx-arm64/native')" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.osx-x64/VelloSharp.Native.osx-x64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/osx-x64/native')" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.linux-x64/VelloSharp.Native.linux-x64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/linux-x64/native')" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.linux-arm64/VelloSharp.Native.linux-arm64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/linux-arm64/native')" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.win-x64/VelloSharp.Native.win-x64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/win-x64/native')" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.win-arm64/VelloSharp.Native.win-arm64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/win-arm64/native')" />
  </ItemGroup>

  <ItemGroup>
    <AvaloniaResource Include="Assets/Lottie/CirclePulse.json" />
  </ItemGroup>
</Project>
