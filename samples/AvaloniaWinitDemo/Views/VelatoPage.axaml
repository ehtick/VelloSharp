<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:AvaloniaWinitDemo.Controls"
             x:Class="AvaloniaWinitDemo.Views.VelatoPage">
  <UserControl.DataContext>
    <Binding ElementName="Player" />
  </UserControl.DataContext>

  <Grid RowDefinitions="Auto,*"
        RowSpacing="12">
    <Border Background="#13304a"
            CornerRadius="8"
            Padding="16">
      <Grid ColumnDefinitions="*,Auto,Auto"
            ColumnSpacing="24"
            VerticalAlignment="Center">
        <StackPanel Spacing="4">
          <TextBlock Text="Velato Lottie sample"
                     FontSize="18"
                     FontWeight="SemiBold" />
          <TextBlock Text="Rendering a looping circle pulse animation via the Velato renderer running entirely on Vello." />
        </StackPanel>

        <ToggleSwitch Grid.Column="1"
                      Content="Play"
                      IsChecked="{Binding IsPlaying, Mode=TwoWay}" />

        <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center">
          <TextBlock Text="Speed"
                     VerticalAlignment="Center" />
          <Slider Minimum="0.25"
                  Maximum="2"
                  Value="{Binding PlaybackSpeed, Mode=TwoWay}"
                  Width="160"
                  SmallChange="0.05"
                  LargeChange="0.25" />
          <Border Background="#ffffff22"
                  CornerRadius="4"
                  Padding="6,2">
            <TextBlock Text="{Binding PlaybackSpeed, StringFormat='{}{0:0.0}x'}"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold" />
          </Border>
        </StackPanel>
      </Grid>
    </Border>

    <Border Grid.Row="1"
            Background="#0b1c2d"
            CornerRadius="12"
            Padding="24">
  <controls:VelatoPlayerView x:Name="Player"
             Source="avares://AvaloniaWinitDemo/Assets/Lottie/CirclePulse.json"
                                 PlaybackSpeed="1"
                                 IsPlaying="True" />
    </Border>
  </Grid>
</UserControl>
