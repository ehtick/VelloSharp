<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <_DefaultMauiFrameworks>net9.0-android;net9.0-ios;net9.0-maccatalyst</_DefaultMauiFrameworks>
    <TargetFrameworks Condition="'$(MauiTargetFrameworks)' == ''">$(_DefaultMauiFrameworks)</TargetFrameworks>
    <TargetFrameworks Condition="'$(MauiTargetFrameworks)' != ''">$(MauiTargetFrameworks)</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <RootNamespace>MauiVelloGallery</RootNamespace>
    <UseMaui>true</UseMaui>
    <SingleProject>true</SingleProject>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <WindowsPackageType>None</WindowsPackageType>
    <WindowsAppSdkBootstrapInitialize>false</WindowsAppSdkBootstrapInitialize>
    <VelloRepositoryRoot Condition="'$(VelloRepositoryRoot)'==''">$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\..\'))</VelloRepositoryRoot>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\bindings\VelloSharp.Maui\VelloSharp.Maui.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\packaging\VelloSharp.Native.AccessKit\VelloSharp.Native.AccessKit.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)packaging\VelloSharp.Native.AccessKit\VelloSharp.Native.AccessKit.csproj')" />
    <ProjectReference Include="..\..\packaging\VelloSharp.Native.Kurbo\VelloSharp.Native.Kurbo.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)packaging\VelloSharp.Native.Kurbo\VelloSharp.Native.Kurbo.csproj')" />
    <ProjectReference Include="..\..\packaging\VelloSharp.Native.Peniko\VelloSharp.Native.Peniko.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)packaging\VelloSharp.Native.Peniko\VelloSharp.Native.Peniko.csproj')" />
    <ProjectReference Include="..\..\packaging\VelloSharp.Native.Vello\VelloSharp.Native.Vello.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)packaging\VelloSharp.Native.Vello\VelloSharp.Native.Vello.csproj')" />
    <ProjectReference Include="..\..\packaging\VelloSharp.Native.VelloSparse\VelloSharp.Native.VelloSparse.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)packaging\VelloSharp.Native.VelloSparse\VelloSharp.Native.VelloSparse.csproj')" />
    <ProjectReference Include="..\..\packaging\VelloSharp.Native.Winit\VelloSharp.Native.Winit.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)packaging\VelloSharp.Native.Winit\VelloSharp.Native.Winit.csproj')" />
  </ItemGroup>

  <ItemGroup>
    <MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>
</Project>
