<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:chart="clr-namespace:VelloSharp.Charting.Avalonia;assembly=VelloSharp.Charting.Avalonia"
        x:Class="VelloSharp.Charting.AvaloniaSample.MainWindow"
        Width="1024"
        Height="640"
        Title="VelloSharp Real-Time Charting - Avalonia Sample"
        mc:Ignorable="d">
  <Grid RowDefinitions="*,Auto">
    <Border x:Name="ChartContainer"
            Background="#10151F"
            BorderBrush="#1E2838"
            BorderThickness="1">
      <chart:ChartView x:Name="ChartHost" />
    </Border>

    <Border x:Name="StatusBar"
            Grid.Row="1"
            Background="#0B1018"
            Padding="12">
      <Grid ColumnDefinitions="*,Auto"
            RowDefinitions="Auto">
        <StackPanel Orientation="Horizontal"
                    Spacing="16"
                    VerticalAlignment="Center">
          <TextBlock x:Name="StatusText"
                     Foreground="#8FA2C3"
                     FontSize="14"
                     Text="Status: Connecting..." />
          <TextBlock x:Name="PriceText"
                     Foreground="#FFFFFF"
                     FontWeight="SemiBold"
                     FontSize="14"
                     Text="Last trade: --" />
          <TextBlock x:Name="LatencyText"
                     Foreground="#8FA2C3"
                     FontSize="14"
                     Text="Latency: --" />
          <TextBlock x:Name="FrameStatsText"
                     Foreground="#8FA2C3"
                     FontSize="14"
                     Text="Frame: --" />
        </StackPanel>

        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="12"
                    VerticalAlignment="Center">
          <StackPanel Orientation="Horizontal"
                      Spacing="6"
                      VerticalAlignment="Center">
            <TextBlock Foreground="#8FA2C3"
                       FontSize="12"
                       Text="Theme" />
            <ComboBox x:Name="ThemeSelector"
                      Width="160"
                      HorizontalContentAlignment="Stretch" />
          </StackPanel>
          <StackPanel Orientation="Horizontal"
                      Spacing="6"
                      VerticalAlignment="Center">
            <TextBlock Foreground="#8FA2C3"
                       FontSize="12"
                       Text="Line width" />
            <Slider x:Name="StrokeSlider"
                    Width="120"
                    Minimum="0.5"
                    Maximum="4"
                    Value="2"
                    TickFrequency="0.25"
                    IsSnapToTickEnabled="True" />
          </StackPanel>
          <ToggleButton x:Name="HighlightToggle"
                        Content="Highlight series" />
          <Button x:Name="ResetStyleButton"
                  Content="Reset overrides" />
        </StackPanel>
      </Grid>
    </Border>
  </Grid>
</Window>
