<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <VelloRepositoryRoot Condition="'$(VelloRepositoryRoot)'==''">$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\\..\\'))</VelloRepositoryRoot>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../bindings/VelloSharp/VelloSharp.csproj" />
    <ProjectReference Include="../../bindings/HarfBuzzSharp/HarfBuzzSharp.csproj" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.osx-arm64/VelloSharp.Native.osx-arm64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/osx-arm64/native')" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.osx-x64/VelloSharp.Native.osx-x64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/osx-x64/native')" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.linux-x64/VelloSharp.Native.linux-x64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/linux-x64/native')" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.linux-arm64/VelloSharp.Native.linux-arm64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/linux-arm64/native')" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.win-x64/VelloSharp.Native.win-x64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/win-x64/native')" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.win-arm64/VelloSharp.Native.win-arm64.csproj"
                      ReferenceOutputAssembly="false"
                      Condition="Exists('$(VelloRepositoryRoot)artifacts/runtimes/win-arm64/native')" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="../AvaloniaVelloExamples/Scenes/*.cs" Link="Scenes/%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SixLabors.ImageSharp" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="../AvaloniaVelloExamples/Assets/vello/**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>Assets/vello/%(RecursiveDir)%(Filename)%(Extension)</TargetPath>
    </Content>
  </ItemGroup>

</Project>
