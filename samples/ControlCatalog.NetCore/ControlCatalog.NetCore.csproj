<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <TargetLatestRuntimePatch>true</TargetLatestRuntimePatch>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AvaloniaUseCompiledBindings>true</AvaloniaUseCompiledBindings>
    <VelloRepositoryRoot Condition="'$(VelloRepositoryRoot)'==''">$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\\..\\'))</VelloRepositoryRoot>
  </PropertyGroup>

  <PropertyGroup>
    <CFBundleName>ControlCatalog</CFBundleName>
    <CFBundleIdentifier>org.vellosharp.samples.controlcatalog</CFBundleIdentifier>
    <CFBundleShortVersionString>1.0.0</CFBundleShortVersionString>
    <NSHighResolutionCapable>true</NSHighResolutionCapable>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="NativeControls/Gtk/nodes.mp4">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" />
    <!--<PackageReference Include="Avalonia.Desktop" />-->
    <PackageReference Include="Avalonia.Native" />
    <PackageReference Include="Avalonia.Win32" />
    <PackageReference Include="Avalonia.X11" />
    <PackageReference Include="Avalonia.Themes.Fluent" />
    <PackageReference Include="Avalonia.Themes.Simple" />
    <PackageReference Include="Avalonia.Fonts.Inter" />
    <PackageReference Include="Avalonia.Controls.ColorPicker" />
    <PackageReference Include="Avalonia.Diagnostics" Condition="'$(Configuration)' == 'Debug'" />
    <PackageReference Include="Dotnet.Bundle" />
    <PackageReference Include="MonoMac.NetStandard" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../ControlCatalog/ControlCatalog.csproj" />
    <ProjectReference Include="../../bindings/VelloSharp/VelloSharp.csproj" />
    <ProjectReference Include="../../bindings/VelloSharp.Gpu/VelloSharp.Gpu.csproj" />
    <ProjectReference Include="../../bindings/VelloSharp.Avalonia.Winit/VelloSharp.Avalonia.Winit.csproj" />
    <ProjectReference Include="../../bindings/VelloSharp.Avalonia.Vello/VelloSharp.Avalonia.Vello.csproj" />
    <ProjectReference Include="../../bindings/VelloSharp.Integration/VelloSharp.Integration.csproj" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.AccessKit/VelloSharp.Native.AccessKit.csproj" ReferenceOutputAssembly="false" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.Kurbo/VelloSharp.Native.Kurbo.csproj" ReferenceOutputAssembly="false" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.Peniko/VelloSharp.Native.Peniko.csproj" ReferenceOutputAssembly="false" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.Vello/VelloSharp.Native.Vello.csproj" ReferenceOutputAssembly="false" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.VelloSparse/VelloSharp.Native.VelloSparse.csproj" ReferenceOutputAssembly="false" />
    <ProjectReference Include="../../packaging/VelloSharp.Native.Winit/VelloSharp.Native.Winit.csproj" ReferenceOutputAssembly="false" />
  </ItemGroup>
</Project>
