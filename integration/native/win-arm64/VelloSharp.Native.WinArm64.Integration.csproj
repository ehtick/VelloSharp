<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RuntimeIdentifier>win-arm64</RuntimeIdentifier>
  </PropertyGroup>

  <PropertyGroup>
    <RepositoryRoot Condition="'$(RepositoryRoot)'==''">$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\\..\\..\\'))</RepositoryRoot>
    <NativePackageIndicator>$([System.IO.Path]::Combine('$(RepositoryRoot)', 'artifacts', 'nuget', 'VelloSharp.Native.Vello.win-arm64.$(VelloNativePackageVersion).nupkg'))</NativePackageIndicator>
    <NativePackagesAvailable Condition="'$(NativePackagesAvailable)'=='' and Exists('$(NativePackageIndicator)')">true</NativePackagesAvailable>
    <NativePackagesAvailable Condition="'$(NativePackagesAvailable)'==''">false</NativePackagesAvailable>
  </PropertyGroup>

  <ItemGroup Condition="'$(NativePackagesAvailable)' == 'true'">
    <PackageReference Include="VelloSharp.Native.AccessKit.win-arm64" />
    <PackageReference Include="VelloSharp.Native.ChartEngine.win-arm64" />
    <PackageReference Include="VelloSharp.Native.Composition.win-arm64" />
    <PackageReference Include="VelloSharp.Native.Editor.win-arm64" />
    <PackageReference Include="VelloSharp.Native.Gauges.win-arm64" />
    <PackageReference Include="VelloSharp.Native.Kurbo.win-arm64" />
    <PackageReference Include="VelloSharp.Native.Peniko.win-arm64" />
    <PackageReference Include="VelloSharp.Native.Scada.win-arm64" />
    <PackageReference Include="VelloSharp.Native.TreeDataGrid.win-arm64" />
    <PackageReference Include="VelloSharp.Native.Vello.win-arm64" />
    <PackageReference Include="VelloSharp.Native.VelloSparse.win-arm64" />
    <PackageReference Include="VelloSharp.Native.Winit.win-arm64" />
  </ItemGroup>

  <Target Name="WarnMissingNativePackages"
          BeforeTargets="Build"
          Condition="'$(NativePackagesAvailable)' != 'true'">
    <Warning Text="Skipping win-arm64 native package validation because no native packages were found under artifacts/nuget. Run packaging to generate the win-arm64 payloads before executing this integration test." />
  </Target>
</Project>
