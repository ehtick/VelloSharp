<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RuntimeIdentifier>linux-arm64</RuntimeIdentifier>
  </PropertyGroup>

  <PropertyGroup>
    <RepositoryRoot Condition="'$(RepositoryRoot)'==''">$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\\..\\..\\'))</RepositoryRoot>
    <NativePackageIndicator>$([System.IO.Path]::Combine('$(RepositoryRoot)', 'artifacts', 'nuget', 'VelloSharp.Native.Vello.linux-arm64.$(VelloNativePackageVersion).nupkg'))</NativePackageIndicator>
    <NativePackagesAvailable Condition="'$(NativePackagesAvailable)'=='' and Exists('$(NativePackageIndicator)')">true</NativePackagesAvailable>
    <NativePackagesAvailable Condition="'$(NativePackagesAvailable)'==''">false</NativePackagesAvailable>
  </PropertyGroup>

  <ItemGroup Condition="'$(NativePackagesAvailable)' == 'true'">
    <PackageReference Include="VelloSharp.Native.AccessKit.linux-arm64" />
    <PackageReference Include="VelloSharp.Native.ChartEngine.linux-arm64" />
    <PackageReference Include="VelloSharp.Native.Composition.linux-arm64" />
    <PackageReference Include="VelloSharp.Native.Editor.linux-arm64" />
    <PackageReference Include="VelloSharp.Native.Gauges.linux-arm64" />
    <PackageReference Include="VelloSharp.Native.Kurbo.linux-arm64" />
    <PackageReference Include="VelloSharp.Native.Peniko.linux-arm64" />
    <PackageReference Include="VelloSharp.Native.Scada.linux-arm64" />
    <PackageReference Include="VelloSharp.Native.TreeDataGrid.linux-arm64" />
    <PackageReference Include="VelloSharp.Native.Vello.linux-arm64" />
    <PackageReference Include="VelloSharp.Native.VelloSparse.linux-arm64" />
    <PackageReference Include="VelloSharp.Native.Winit.linux-arm64" />
  </ItemGroup>

  <Target Name="WarnMissingNativePackages"
          BeforeTargets="Build"
          Condition="'$(NativePackagesAvailable)' != 'true'">
    <Warning Text="Skipping linux-arm64 native package validation because no native packages were found under artifacts/nuget. Run packaging to generate the linux-arm64 payloads before executing this integration test." />
  </Target>
</Project>
