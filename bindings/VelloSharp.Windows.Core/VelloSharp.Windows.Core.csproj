<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AssemblyName>VelloSharp.Windows.Core</AssemblyName>
    <RootNamespace>VelloSharp.Windows</RootNamespace>
    <IsPackable>true</IsPackable>
    <PackageId>VelloSharp.Windows.Core</PackageId>
    <Title>VelloSharp.Windows.Core</Title>
    <Description>Shared Windows graphics infrastructure for VelloSharp integrations.</Description>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../VelloSharp/VelloSharp.csproj" />
    <ProjectReference Include="../VelloSharp.Rendering/VelloSharp.Rendering.csproj" />
    <ProjectReference Include="../VelloSharp.Gpu/VelloSharp.Gpu.csproj" />
    <ProjectReference Include="../VelloSharp.Text/VelloSharp.Text.csproj" />
    <ProjectReference Include="../VelloSharp.Skia.Core/VelloSharp.Skia.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Vortice.Direct3D9" />
  </ItemGroup>
</Project>
