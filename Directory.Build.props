<Project>
  <PropertyGroup>
    <Company>VelloSharp</Company>
    <Authors>Wieslaw Soltes</Authors>
    <Product>VelloSharp</Product>
    <RepositoryUrl>https://github.com/wieslawsoltes/VelloSharp</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/wieslawsoltes/VelloSharp</PackageProjectUrl>
    <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>vello;graphics;rendering;gpu</PackageTags>
    <VersionPrefix>0.5.0</VersionPrefix>
    <VersionSuffix Condition="'$(VersionSuffix)' == ''"></VersionSuffix>
    <AssemblyVersion>$(VersionPrefix).0</AssemblyVersion>
    <FileVersion>$(VersionPrefix).0</FileVersion>
    <InformationalVersion Condition="'$(InformationalVersion)' == ''">$(Version)</InformationalVersion>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageReadmeFile Condition="'$(IsPackable)' == 'true'">README.md</PackageReadmeFile>
    <ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)' == 'true'">true</ContinuousIntegrationBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(IsPackable)' == ''">
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup Condition="'$(IsPackable)' == 'true'">
    <None Include="$(MSBuildThisFileDirectory)README.md"
          Condition="Exists('$(MSBuildThisFileDirectory)README.md')"
          Pack="true"
          PackagePath=""
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)LICENSE"
          Condition="Exists('$(MSBuildThisFileDirectory)LICENSE')"
          Pack="true"
          PackagePath=""
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)vello/LICENSE-APACHE"
          Condition="Exists('$(MSBuildThisFileDirectory)vello/LICENSE-APACHE')"
          Pack="true"
          PackagePath="licenses/vello/LICENSE-APACHE"
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)vello/LICENSE-MIT"
          Condition="Exists('$(MSBuildThisFileDirectory)vello/LICENSE-MIT')"
          Pack="true"
          PackagePath="licenses/vello/LICENSE-MIT"
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)kurbo/LICENSE-APACHE"
          Condition="Exists('$(MSBuildThisFileDirectory)kurbo/LICENSE-APACHE')"
          Pack="true"
          PackagePath="licenses/kurbo/LICENSE-APACHE"
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)kurbo/LICENSE-MIT"
          Condition="Exists('$(MSBuildThisFileDirectory)kurbo/LICENSE-MIT')"
          Pack="true"
          PackagePath="licenses/kurbo/LICENSE-MIT"
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)peniko/LICENSE-APACHE"
          Condition="Exists('$(MSBuildThisFileDirectory)peniko/LICENSE-APACHE')"
          Pack="true"
          PackagePath="licenses/peniko/LICENSE-APACHE"
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)peniko/LICENSE-MIT"
          Condition="Exists('$(MSBuildThisFileDirectory)peniko/LICENSE-MIT')"
          Pack="true"
          PackagePath="licenses/peniko/LICENSE-MIT"
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)wgpu/LICENSE.APACHE"
          Condition="Exists('$(MSBuildThisFileDirectory)wgpu/LICENSE.APACHE')"
          Pack="true"
          PackagePath="licenses/wgpu/LICENSE.APACHE"
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)wgpu/LICENSE.MIT"
          Condition="Exists('$(MSBuildThisFileDirectory)wgpu/LICENSE.MIT')"
          Pack="true"
          PackagePath="licenses/wgpu/LICENSE.MIT"
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)winit/LICENSE"
          Condition="Exists('$(MSBuildThisFileDirectory)winit/LICENSE')"
          Pack="true"
          PackagePath="licenses/winit/LICENSE"
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)velato/LICENSE-APACHE"
          Condition="Exists('$(MSBuildThisFileDirectory)velato/LICENSE-APACHE')"
          Pack="true"
          PackagePath="licenses/velato/LICENSE-APACHE"
          Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)velato/LICENSE-MIT"
          Condition="Exists('$(MSBuildThisFileDirectory)velato/LICENSE-MIT')"
          Pack="true"
          PackagePath="licenses/velato/LICENSE-MIT"
          Visible="false" />
  </ItemGroup>
</Project>
